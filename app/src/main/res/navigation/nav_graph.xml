<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/nav"
            app:startDestination="@id/mainMenuFragment">

    <fragment
            android:id="@+id/mainMenuFragment"
            android:name="ru.aleshi.letsplaycities.ui.MainMenuFragment"
            android:label="MainMenu"
            tools:layout="@layout/fragment_main_menu">
        <action android:id="@+id/start_multiplayer_fragment"
                app:destination="@id/multiplayerFragment"/>
        <action android:id="@+id/start_network_fragment"
                app:destination="@id/networkFragment"/>
        <action android:id="@+id/start_game_fragment" app:destination="@id/gameFragment"/>
        <action android:id="@+id/start_settings_fragment" app:destination="@id/settingsFragment"/>
    </fragment>

    <fragment
            android:id="@+id/multiplayerFragment"
            android:name="ru.aleshi.letsplaycities.ui.MultiplayerFragment"
            android:label="@string/multiplayer_title"
            tools:layout="@layout/fragment_multiplayer"/>

    <fragment
            android:id="@+id/networkFragment"
            android:name="ru.aleshi.letsplaycities.ui.network.NetworkFragment"
            android:label="@string/network_title"
            tools:layout="@layout/fragment_network">
        <action android:id="@+id/showChangeModeDialog" app:destination="@id/changeModeDialog"/>
        <action android:id="@+id/showLoginDialog" app:destination="@id/loginFragment"/>
        <action android:id="@+id/start_friends_fragment" app:destination="@id/friendsFragment"/>
    </fragment>

    <fragment android:id="@+id/gameFragment" android:name="ru.aleshi.letsplaycities.ui.GameFragment"
              android:label="GameFragment">
        <argument android:name="gameMode" app:argType="ru.aleshi.letsplaycities.base.GameMode"/>
    </fragment>
    <fragment
            android:id="@+id/settingsFragment"
            android:name="ru.aleshi.letsplaycities.ui.settings.SettingsFragment"
            android:label="@string/settings"
            tools:layout="@layout/fragment_settings">
        <action android:id="@+id/start_addcity_fragment" app:destination="@id/addCityFragment"/>
        <action android:id="@+id/start_blacklist_fragment" app:destination="@id/blackListFragment"/>
        <action android:id="@+id/start_theme_fragment" app:destination="@id/themeFragment"/>
        <action android:id="@+id/start_score_fragment" app:destination="@id/scoreFragment"/>
    </fragment>

    <fragment
            android:id="@+id/addCityFragment"
            android:name="ru.aleshi.letsplaycities.ui.AddCityFragment"
            tools:layout="@layout/fragment_addcity"
            android:label="@string/addcity_title"/>

    <fragment
            android:id="@+id/themeFragment"
            android:name="ru.aleshi.letsplaycities.ui.theme.ThemeFragment"
            android:label="@string/theme_title"
            tools:layout="@layout/fragment_theme">
        <action android:id="@+id/showPreviewImageDialog" app:destination="@id/previewImageDialog"/>
    </fragment>

    <fragment
            android:id="@+id/blackListFragment"
            android:name="ru.aleshi.letsplaycities.ui.blacklist.BlackListFragment"
            android:label="@string/black_list_title"
            tools:layout="@layout/fragment_blacklist">
        <action android:id="@+id/showConfimationDialog"
                app:destination="@id/confirmationDialog"/>
    </fragment>

    <fragment
            android:id="@+id/scoreFragment"
            android:name="ru.aleshi.letsplaycities.ui.ScoreFragment"
            android:label="@string/score_title"
            tools:layout="@layout/fragment_score"/>
    <dialog
            android:id="@+id/confirmationDialog"
            android:name="ru.aleshi.letsplaycities.ui.confirmdialog.ConfirmationDialog"
            android:label="ConfirmationDialog">

        <argument android:name="requestCode" app:argType="integer"/>
        <argument
                android:name="message"
                app:argType="string"/>
        <argument android:name="title" app:argType="string" app:nullable="true"/>
    </dialog>

    <dialog
            android:id="@+id/previewImageDialog"
            android:name="ru.aleshi.letsplaycities.ui.PreviewImageDialog"
            android:label="PreviewImageDialog">
        <argument android:name="assetImageName" app:argType="string"/>
        <argument android:name="title" app:argType="string"/>
    </dialog>

    <dialog
            android:id="@+id/changeModeDialog"
            android:name="ru.aleshi.letsplaycities.ui.network.ChangeModeDialog"
            android:label="ChangeModeDialog"/>

    <dialog
            android:id="@+id/changeAvatarDialog"
            android:name="ru.aleshi.letsplaycities.ui.network.ChangeAvatarDialog"
            android:label="ChangeAvatarDialog"/>

    <fragment
            android:id="@+id/loginFragment"
            android:name="ru.aleshi.letsplaycities.ui.network.LoginFragment"
            android:label="@string/login_no_sn"
            tools:layout="@layout/fragment_login">
        <action
                android:id="@+id/showChangeAvatarDialog"
                app:destination="@id/changeAvatarDialog"/>
    </fragment>

    <fragment
            android:id="@+id/friendsFragment"
            android:name="ru.aleshi.letsplaycities.ui.friends.FriendsFragment"
            android:label="@string/friends_title"
            tools:layout="@layout/fragment_friends">
        <action android:id="@+id/showConfimationDialog"
                app:destination="@id/confirmationDialog"/>
    </fragment>

</navigation>