<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Default app theme with night mode -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorAccent">@color/drkColorPrimary</item>
        <item name="colorPrimary">@color/drkColorPrimary</item>
        <item name="colorPrimaryDark">@android:color/background_dark</item>
        <item name="colorSecondary">@android:color/background_dark</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="android:colorBackground">@android:color/background_dark</item>
        <item name="colorSurface">#1e1e1e</item>
        <item name="colorOnSurface">@android:color/white</item>
        <item name="colorOnBackground">@android:color/white</item>
        <item name="colorOnSecondary">@android:color/white</item>
        <item name="android:windowBackground">@color/drk_window_bg</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@color/drkColorPrimaryDark</item>
        <item name="itemBgMe">@drawable/drk_bg_other</item>
        <item name="itemBgOther">@drawable/drk_bg_other</item>
        <item name="itemMsgMe">@drawable/drk_msg_bg</item>
        <item name="itemMsgOther">@drawable/drk_msg_bg</item>
        <item name="cityInputColor">#fff</item>
        <item name="fgSpanColor">#fff</item>
        <item name="avatarBorderColor">#9C27B0</item>
    </style>

    <!-- night version of AppTheme already have all properties, just inherit it -->

    <style name="AutStyleTheme" parent="AppTheme" />

    <style name="FrStyleTheme" parent="AppTheme" />

    <style name="GeoStyleTheme" parent="AppTheme" />

    <style name="GrStyleTheme" parent="AppTheme" />

    <style name="RusStyleTheme" parent="AppTheme" />

    <style name="UkrStyleTheme" parent="AppTheme" />

    <style name="UsaStyleTheme" parent="AppTheme" />

    <style name="VkStyleTheme" parent="AppTheme" />

    <style name="WhiteStyleTheme" parent="AppTheme" />

</resources>
