<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:descendantFocusability="blocksDescendants"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:paddingStart="6dp"
        android:paddingEnd="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout">

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/itemBackground"
                android:descendantFocusability="blocksDescendants"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:background="@color/defWindowBg">

            <View
                    android:id="@+id/topView"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    tools:background="@color/defColorPrimary"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textSize="20sp"
                    tools:text="Test item"
                    app:layout_constraintTop_toTopOf="@id/topView"
                    app:layout_constraintStart_toStartOf="@id/topView"
                    app:layout_constraintBottom_toBottomOf="@id/topView"/>

            <androidx.appcompat.widget.AppCompatImageView
                    android:padding="2dp"
                    android:id="@+id/btn_show_preview"
                    android:background="@null"
                    android:layout_marginEnd="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_view"
                    app:layout_constraintTop_toTopOf="@id/topView"
                    app:layout_constraintBottom_toBottomOf="@id/topView"
                    app:layout_constraintEnd_toEndOf="@id/topView"/>

            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/btn_unlock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:background="@null"
                    android:padding="2dp"
                    android:src="@drawable/ic_lock"
                    app:layout_constraintTop_toTopOf="@id/topView"
                    app:layout_constraintBottom_toBottomOf="@id/topView"
                    app:layout_constraintEnd_toStartOf="@id/btn_show_preview"/>

            <ru.aleshi.letsplaycities.ui.game.GameItemView
                    android:id="@+id/sampleGameView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:background="?attr/itemBgMe"
                    app:layout_constraintTop_toBottomOf="@id/topView"
                    app:layout_constraintStart_toStartOf="@id/topView"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>