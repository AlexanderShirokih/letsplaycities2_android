<resources xmlns:tools="http://schemas.android.com/tools">
    <declare-styleable name="CustomTheme">
        <attr name="scoreColor" format="color|reference"/>
        <attr name="cityInputColor" format="color|reference"/>
    </declare-styleable>

    <attr name="itemBgMe" format="reference"/>
    <attr name="itemBgOther" format="reference"/>
    <attr name="itemMsgMe" format="reference"/>
    <attr name="itemMsgOther" format="reference"/>
    <attr name="fgSpanColor" format="color|reference"/>
    <attr name="avatarBorderColor" format="color|reference"/>

    <!-- Default app theme (Yellow) -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorAccent">@color/defColorPrimary</item>
        <item name="colorPrimary">@color/defColorPrimary</item>
        <item name="colorPrimaryDark">@color/defColorPrimaryDark</item>
        <item name="colorSecondary">@color/defColorPrimary</item>
        <item name="colorOnBackground">@android:color/black</item>
        <item name="android:windowBackground">@color/defWindowBg</item>

        <item name="itemBgMe">@drawable/bg_me</item>
        <item name="itemBgOther">@drawable/bg_other</item>
        <item name="itemMsgMe">@drawable/bg_msg_me</item>
        <item name="itemMsgOther">@drawable/bg_msg_other</item>
        <item name="fgSpanColor">@color/fg_span_color</item>
        <item name="scoreColor">?android:textColor</item>
        <item name="cityInputColor">@android:color/white</item>
        <item name="avatarBorderColor">?colorPrimaryDark</item>

        <item name="android:textColor">#2E2E2E</item>
        <item name="android:textColorHint">#2E2E2E</item>
    </style>

    <style name="Social">
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:background">@null</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:elevation" tools:targetApi="lollipop">15dp</item>
    </style>

    <style name="Toolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:textColorPrimary">?attr/colorOnPrimary</item>
    </style>

    <style name="GameActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:tint">?attr/colorOnPrimary</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:background">@drawable/bg_game_button_round</item>
        <item name="android:elevation" tools:targetApi="lollipop">18dp</item>
    </style>

    <style name="GameAvatarView">
        <item name="android:background">@drawable/bg_avatar_rounded</item>
        <item name="android:elevation" tools:targetApi="lollipop">18dp</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>

        <item name="civ_border_color">#0f0</item>
        <item name="civ_border_width">4dp</item>
        <item name="civ_shadow">true</item>
        <item name="civ_shadow_radius">4</item>
    </style>

</resources>
