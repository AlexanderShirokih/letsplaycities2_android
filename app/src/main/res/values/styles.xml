<resources xmlns:tools="http://schemas.android.com/tools">
    <declare-styleable name="CustomTheme">
        <attr name="sepBg" format="reference"/>
        <attr name="helpIcon" format="reference"/>
        <attr name="surrIcon" format="reference"/>
        <attr name="menuIcon" format="reference"/>
        <attr name="scoreColor" format="color|reference"/>
    </declare-styleable>

    <attr name="itemBgMe" format="reference"/>
    <attr name="itemBgOther" format="reference"/>
    <attr name="itemMsgMe" format="reference"/>
    <attr name="itemMsgOther" format="reference"/>

    <attr name="iconColor" format="color|reference"/>
    <attr name="fgSpanColor" format="color|reference"/>

    <!-- Default app token (Yellow) -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorAccent">#ffa726</item>
        <item name="colorPrimary">#ffa726</item>
        <item name="colorPrimaryDark">@color/defColorPrimaryDark</item>
        <item name="colorOnBackground">@android:color/black</item>
        <item name="android:windowBackground">@color/defWindowBg</item>

        <item name="sepBg">@color/def_sep</item>
        <item name="iconColor">@color/def_icon</item>
        <item name="itemBgMe">@drawable/bg_me</item>
        <item name="itemBgOther">@drawable/bg_other</item>
        <item name="itemMsgMe">@drawable/bg_msg_me</item>
        <item name="itemMsgOther">@drawable/bg_msg_other</item>
        <item name="fgSpanColor">@color/fg_span_color</item>
        <item name="scoreColor">?android:textColor</item>
    </style>

    <style name="Social">
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:background">@null</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:elevation" tools:targetApi="lollipop">15dp</item>
    </style>

    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="android:background">@color/defColorPrimary</item>
    </style>

    <style name="GameActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:tint">?attr/colorOnPrimary</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:background">@drawable/bg_game_button_round</item>
        <item name="android:elevation" tools:targetApi="lollipop">18dp</item>
    </style>

    <style name="GameAvatarView">
        <item name="android:background">@drawable/bg_avatar_rounded</item>
        <item name="android:elevation" tools:targetApi="lollipop">18dp</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>

        <item name="civ_border_color">?attr/colorOnPrimary</item>
        <item name="civ_border_width">2dp</item>
        <item name="civ_shadow">true</item>
        <item name="civ_shadow_radius">4</item>
        <item name="civ_shadow_color">?attr/colorOnPrimary</item>
    </style>

</resources>
